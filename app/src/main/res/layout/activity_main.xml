<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_relative"

    tools:context="com.example.myapplication.MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_above="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    <View
        android:id="@+id/view"
        android:layout_above="@+id/button"
        android:background="@color/beiyingd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/button"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp">

          <!-- <TextView
               android:id="@+id/tv"
               android:text="文本框"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />-->

<RelativeLayout
    android:id="@+id/tansuo_relative"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/tansuo"
            android:layout_centerInParent="true"
          android:layout_width="wrap_content"
            android:src="@mipmap/tansuo_2"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
</RelativeLayout>
            <RelativeLayout
                android:id="@+id/wenjian_relative"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


            <ImageView
                android:id="@+id/wenjian"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:src="@mipmap/wj_2"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wode_relative"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/hongbao"
                    android:src="@mipmap/hongbao"
                    android:paddingLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/wode"
                android:layout_width="wrap_content"
                android:src="@mipmap/wode_2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

<FrameLayout
    android:background="@mipmap/deng"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>

<RelativeLayout
    android:id="@+id/qidong"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</RelativeLayout>
</RelativeLayout>
