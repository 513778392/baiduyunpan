<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="267dp"
            android:background="@drawable/paihang5"
            android:layout_margin="10dp"
            android:layout_height="220dp">

            <TextView
                android:id="@+id/bangding_text"
                android:text="新片预定通知"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="33dp" />

            <LinearLayout
                android:id="@+id/bangding_linear"
                android:orientation="vertical"
                android:background="@drawable/paihang3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="81dp"
                        android:background="@mipmap/douban_bg"
                        android:layout_height="115dp">
                        <view.MLImageView
                            android:id="@+id/images"
                            android:layout_width="78dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/img_moren1"
                            app:ml_radius="3.3dp"
                            android:paddingBottom="0.6dp"
                            android:layout_centerInParent="true"
                            android:layout_height="112dp" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/name"
                            android:text="名字"
                            android:textColor="@color/zitiyanse3"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/pinfen"
                            android:text="评分"
                            android:textColor="@color/zitiyanse1"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shijian"
                            android:text="推送版本-"
                            android:textColor="@color/zitiyanse9"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/time"
                                android:text="时间"
                                android:layout_toRightOf="@+id/shijian"
                                android:textColor="#39d688"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:id="@+id/v1"
                    android:background="@color/beiying"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="33dp">
                    <TextView
                        android:id="@+id/queding"
                        android:text="查看"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:textSize="14sp"
                        android:textColor="@color/zitiyanse6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/v2"
                        android:background="@color/beiying"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/quxiao"
                        android:textSize="14sp"
                        android:textColor="@color/zitiyanse6"
                        android:text="取消"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
