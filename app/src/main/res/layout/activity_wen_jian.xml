<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beiying"
    tools:context="com.example.myapplication.WenJianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/wenjian_list"
            android:divider="@color/beiyingd"
            android:dividerHeight="1px"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_height="0dp">


        </ListView>
        <View
            android:background="@color/beiying"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/fanhui"
            android:text="返回"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/zitiyanse3"
            android:textSize="14sp"
            android:layout_height="match_parent" />
            <TextView

                android:text="保存"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#39d688"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:background="@mipmap/deng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
