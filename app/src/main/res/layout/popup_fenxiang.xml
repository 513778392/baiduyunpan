<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="267dp"
            android:background="@drawable/paihang5"
            android:layout_margin="10dp"
            android:layout_height="167dp">

            <TextView
                android:id="@+id/bangding_text"
                android:text="分享文件"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="33dp" />

            <LinearLayout
                android:id="@+id/ding_linear"
                android:orientation="vertical"
                android:background="@drawable/paihang3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:id="@+id/gongkai"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


            <ImageView
              android:id="@+id/gouxuan_1"
                android:src="@mipmap/gouxuan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gong"
                android:textSize="14sp"
                android:textColor="@color/zitiyanse6"
                android:layout_marginLeft="10dp"
                android:text="公开分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="36dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:id="@+id/jiami"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/gouxuan_2"

                        android:src="@mipmap/gouxuan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/jia"
                        android:text="加密分享"
                        android:textSize="14sp"
                        android:textColor="@color/zitiyanse6"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/v"
                    android:layout_marginTop="10dp"
                    android:background="@color/beiyingd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="33dp">
                    <TextView
                        android:id="@+id/queding"
                        android:text="确定"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/zitiyanse9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/v1"
                        android:background="@color/beiyingd"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/quxiao"
                        android:textSize="14sp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/zitiyanse9"
                        android:text="取消"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
