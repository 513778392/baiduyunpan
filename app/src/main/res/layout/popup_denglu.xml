<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="267dp"
            android:background="@drawable/paihang5"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bangding_text"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="33dp" />

            <LinearLayout
                android:id="@+id/ding_linear"
                android:orientation="vertical"
                android:background="@drawable/paihang3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <EditText
                        android:id="@+id/xingming"
                        android:background="@drawable/paihang4"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:layout_centerInParent="true"
                        android:maxLength="20"
                        android:hint="请输入手机号码"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/zitiyanse9"
                        android:textColor="@color/zitiyanse6"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/yanzhengma"
                        android:background="@drawable/paihang4"
                        android:textSize="14sp"
                        android:layout_centerInParent="true"
                        android:maxLength="20"
                        android:hint="请输入验证码"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:paddingLeft="10dp"
                        android:paddingRight="80dp"
                        android:textColorHint="@color/zitiyanse9"
                        android:textColor="@color/zitiyanse6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/huoqu"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/zitiyanse8"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:text="获取验证码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                </LinearLayout>
                <View
                    android:id="@+id/v"
                    android:background="@color/beiyingd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="33dp">
                    <TextView
                        android:id="@+id/queding"
                        android:text="确定"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/zitiyanse6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <View
                        android:id="@+id/v1"
                        android:background="@color/beiyingd"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/quxiao"
                        android:text="取消"
                        android:textSize="14sp"
                        android:textColor="@color/zitiyanse6"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
