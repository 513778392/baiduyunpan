<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/list_wenjian"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/wenjian_linear"
        android:layout_height="67dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/wenj"
            android:src="@mipmap/wenjian"
            android:layout_width="31dp"
            android:layout_height="match_parent" />
        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/name"
                    android:text="电影"
                    android:textColor="@color/zitiyanse3"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time"
                    android:text="时间"
                    android:textColor="@color/zitiyanse9"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                android:id="@+id/size"
                    android:layout_marginLeft="12dp"
                android:textColor="@color/zitiyanse9"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/wenjian_relative"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/gouxuan_1"
            android:src="@mipmap/gouxuan_1"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
