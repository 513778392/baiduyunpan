<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/beiying"
    android:layout_height="match_parent"
    android:id="@+id/zhifu_re"
    tools:context="com.example.myapplication.ZhiFuBaoActivity">

        <RelativeLayout
            android:id="@+id/zhifu_relative"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="80dp">
           <LinearLayout
               android:id="@+id/vip_linear"
               android:layout_width="match_parent"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:src="@mipmap/vip2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginLeft="4dp"
                   android:id="@+id/yigeyue"
                   android:textColor="@color/zitiyanse6"
                   android:textSize="12sp"
                   android:text="百度网盘超级会员-一个月"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginLeft="4dp"
                   android:textColor="@color/zitiyanse8"
                   android:textSize="12sp"
                   android:text="(几人公用)"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/daoji"
                    android:textColor="@color/zitiyanse9"
                    android:textSize="12sp"
                    android:text="00:50:00"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shuoming"
                    android:layout_centerVertical="true"
                    android:text="说明"
                    android:textColor="@color/zitiyanse6"
                    android:layout_width="47dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/ziti"
                    android:layout_height="26dp" />

                <TextView
                    android:id="@+id/zhifu"
                    android:layout_centerVertical="true"
                    android:text="支付"
                    android:layout_width="47dp"
                    android:gravity="center"
                    android:textColor="@color/zitiyanse6"
                    android:background="@drawable/ziti"
                    android:layout_height="26dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/vip_linear"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/huafei_linear"
                    android:layout_marginBottom="17dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="只需"
                        android:id="@+id/zhixu"
                        android:textColor="@color/zitiyanse6"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#f65e2b"
                        android:text="10"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/yuan"
                        android:text="元"
                        android:textColor="@color/zitiyanse6"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/dengdai"
                    android:visibility="gone"
                    android:textColor="@color/zitiyanse9"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:text="等待显示..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/zhuanghao_linear"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/zhanghao"
                        android:textColor="@color/zitiyanse9"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="账号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/mima"
                        android:textColor="@color/zitiyanse9"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>









<View
    android:id="@+id/v3"
    android:background="@color/beiyingd"
    android:layout_width="match_parent"
    android:layout_marginTop="80dp"
    android:layout_height="1px"/>






    <LinearLayout
        android:id="@+id/yidong_linear1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/fan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="返回"
            android:textColor="@color/zitiyanse6"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/v1"
            android:background="@color/beiying"
            android:layout_width="1px"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/deng"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/zitiyanse6"
            android:background="?android:attr/selectableItemBackground"
            android:text="登录"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/v2"
            android:background="@color/beiying"
            android:layout_width="1px"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/yimai"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/zitiyanse6"
            android:background="?android:attr/selectableItemBackground"
            android:text="已买"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:id="@+id/v"
        android:background="@color/beiying"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>
