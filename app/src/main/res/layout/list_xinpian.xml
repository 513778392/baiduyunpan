<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/xin_linear"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="133dp">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="81dp"
        android:background="@mipmap/douban_bg"
        android:layout_height="115dp">
    <view.MLImageView
        android:id="@+id/imageurl"
        android:layout_width="78dp"
        android:scaleType="fitXY"
        android:src="@mipmap/wenjj"
        app:ml_radius="3.3dp"
        android:paddingBottom="0.6dp"
        android:layout_centerInParent="true"
        android:layout_height="112dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/name"
        android:text="名字"
        android:maxEms="20"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/zitiyanse6"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp" />
        <TextView
            android:id="@+id/pinfen"
            android:text="评分"
            android:textColor="@color/zitiyanse1"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/shijian"
            android:text="时间"
            android:textColor="@color/zitiyanse9"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tuisong_relative"
        android:layout_width="70dp"
        android:orientation="vertical"

        android:layout_height="match_parent">
        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/istuisong"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/gouxuan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/yituisong"
            android:layout_alignParentBottom="true"
            android:text="已预定"
            android:textColor="#39d688"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>

    
</LinearLayout>
